<script type="text/javascript">
// this adds the 'active' class to the correct navbar li depending on where the user is on the site.
$(document).ready(function() {
    // get current url path
    var pathname = window.location.pathname;
    $('.nav > li > a[href="'+pathname+'"]').parent().addClass('active');
});

var $card = $('.card');
var $modal = $('#photoLargeModal');
$card.click(this, function(){
    var $this = $(this),
        $thisImage = $this.find('img'),
        $thisCaption = $this.find('#photoSmallCaption');
    $modal.find('#photoPreview').attr('src', $thisImage[0].src);
    $modal.find('#photoCaption').html($thisCaption[0].innerHTML);
});
</script>
