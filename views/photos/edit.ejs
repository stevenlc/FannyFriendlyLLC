<% include ../partials/header %>

<div class="container">
    <h1>Edit Photo (Admin Only)</h1>
    <form action="/photos/<%= photo._id %>?_method=PUT" method="POST">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" for="image">Image</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="image" name="photo[image]" value="<%= photo.image %>">
            </div>
        </div>
        <div class="form-group row">
            <label for="caption">Caption</label>
            <textarea class="form-control" id="caption" name="photo[caption]" rows="5"><%- photo.caption %></textarea>
        </div>
        <div class="form-group row">
            <button class="btn btn-lg btn-success btn-block">Submit</button>
        </div>
    </form>
    <a href="/photos">Go Back to List of photos</a>
</div>

<% include ../partials/footer %>

