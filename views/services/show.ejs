<% include ../partials/header %>

<!-- this is /services/service-name -->
<!-- it has access to service -->

<div class="container pt-5 mt-5">
    <div class="row">
        <div class="caption col-md-7">
            <h3><a><%= service.name %></a></h3>
            <h5><%= service.price %></h5>
            <p class="pt-4"><%- service.description %></p>
            <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#buyNowDetails">Buy Now</button>
            <!-- a class="btn btn-success" role="button" href="/contact">Buy Now - Contact Us</a -->
            <div class="collapse" id="buyNowDetails">
                <div class="card card-body mt-3 ml-3 mr-3">
                    <% include ../partials/avail %>
                </div>
            </div>
            <p class="mt-4"><a href="/services">&lt; see all services</a></p>
            <% if (currentUser) { %>
            <a class="btn btn-warning btn-xs" href="/services/<%= service.url %>/edit">Edit</a>
            <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#deleteFormModal">
                Delete
            </button>

            <div class="modal fade" id="deleteFormModal" tabindex="-1" role="dialog" aria-labelledby="deleteFormLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="deleteFormLabel">Warning!</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            You are about to <strong>DELETE</strong> <%= service.name %>.
                            This action is irreversable. Are you sure you want to do this? 
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form class="delete-form mb-0" action="/services/<%= service.url %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-xs">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>

        <div class="col-md-5">
            <img src="<%= service.image %>" class="img-fluid" id="product-show-img">
        </div>
    </div>
</div>



<% include ../partials/footer %>
