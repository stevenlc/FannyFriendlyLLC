<% include ../partials/header %>

<!-- This page is /services/service-name -->
<!-- This page has access to a single service item -->

<div class="container">
    <header class="jumbotron jumbotron-fluid pt-0 pl-0">
        <div class="container text-left pl-0 pr-0">
            <div class="row">
                <div class="col-md-4">
                    <img src="/images/fannyfriendly-logo.png" id="fanny-logo-img" class="img-fluid d-none d-md-block">
                </div>
                <div class="col-md-8">
                    <h2 class="display-4 mb-3 mt-5">
                        <span class="title">Fanny Friendly, LLC</span>
                    </h2>
                    <!-- h3 class="text-center">(A hand-held bidet company)</h3 -->
                </div>
            </div>
            <!--hr class="text-center"-->
            <p class="lead text-center mt-2">We are a limited liability company registered in the State of Wisconsin.<br>
                <%- product.description %>
            </p> 
        </div>
        <% if (currentUser) { %>
            <p class="lead">
            <a class="btn btn-success btn-md float-right" href="/products/<%= product.url %>/new" role="button">Add New <%= product.name %> Item</a>
            <a class="btn btn-warning btn-xs" href="/products/<%= product.url %>/edit">Edit <%= product.name %> Product</a>
            <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#deleteFormModal">
                Delete <%= product.name %> Product
            </button>
            <div class="modal fade" id="deleteFormModal" tabindex="-1" role="dialog" aria-labelledby="deleteFormLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title text-danger" id="deleteFormLabel">Warning!</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            You are about to <strong>DELETE</strong> <%= product.name %>.
                            This action is irreversable. Are you sure you want to do this? 
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <form class="delete-form mb-0" action="/products/<%= product.url %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-xs">Delete <%= product.name %> Product</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            </p>
        <% } %>
    </header>

    <p><a href="/products">&lt; see all products</a></p>

    <% if (currentUser) { %>
    <% } %>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% product["items"].forEach(function(item) { %>
        <div class="col-md-4 col-sm-6">
            <div class="border border-secondary rounded mb-5 p-2">
                <h5><%= item.name %></h5>
                <p><a href="/products/<%= product.url %>/<%= item.url %>" class="btn btn-primary btn-sm">Show More</a></p>
                <div class="border border-light py-3">
                    <img class="img-responsive img-fluid" id="product-index-img" src="<%= item.image %>">
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
